    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />        
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="~/css/jquery/dark-hive/jquery-ui-1.10.0.custom.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery/jquery-ui-1.10.3.custom.min.js" type="text/javascript"></script>
    <script src="~/js/iHedge/home.js" type="text/javascript"></script>
    <script src="~/js/iHedge/loginHandler.js" type="text/javascript"></script>
    <script src="~/js/iHedge/util.js" type="text/javascript"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)
</head>
<body>
    <!-- FB Login -->
    <div id="fb-root"></div>
    <!-- End FB Login -->

    <div class="container body-content">
        @RenderBody()

        <input id="login" type="hidden" value="<%=InMaApp.ContextManager.Current.LoginId %>" />
        <input id="authenticated" type="hidden" value="false" />
        <input id="hfPortfolioId" type="hidden" value="@ViewData["PortfolioId"]" />
        <div id="errorDiv">
        </div>
        <div id="statusDiv">
        </div>
        <div id="generalDialog"></div>
        <input id="investAuthToken" type="hidden" value="@ViewData["InvestAuthToken"]" />
        <input id="authProviderUserId" type="hidden" value="@ViewData["AuthProviderUserId"]" />
        <input id="authProviderName" type="hidden" value="@ViewData["AuthProviderName"]" />
        

        <footer>
            <div id="footer">
                <!-- FB Button -->
                <!--<div class="fb-login-button" data-max-rows="1" data-size="medium" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="false"></div> -->
                <!-- End FB Button -->
                <div id="miHome" class="toolbarButton" style="left: 10px;">
                    <img title="Home" style="width: 60px; height: 60px;" alt="" src="/images/home-icon72.png" />
                    <div style="position: absolute; left: 12px;" class="normalCaption">Home</div>
                </div>
                <div id="miBrowseInstruments" class="toolbarButton authorized" style="left: 110px;">
                    <img title="Stock market" style="width: 60px; height: 60px;" alt="" src="/images/stock-market-icon72.png" />
                    <div style="position: absolute; left: 8px;" class="normalCaption">Stocks</div>
                </div>
                <div id="miShowToDo" class="toolbarButton authorized" style="left: 210px;">
                    <img style="width: 60px; height: 60px;" title="To Do List" alt="" src="/images/clipboard-icon72.png" />
                    <div style="position: absolute; left: 10px;" class="normalCaption">To Do</div>
                </div>
                <div id="miShowPortfolios" class="toolbarButton authorized" style="left: 310px;">
                    <img title="Portfolios" style="width: 60px; height: 60px;" alt="" src="/images/Pie-Chart-icon72.png" />
                    <div style="position: absolute; left: -4px;" class="normalCaption">Portfolios</div>
                </div>
                <div id="miShowTournaments" class="toolbarButton authorized" style="left: 424px;">
                    <img title="Tournaments" style="width: 60px; height: 60px;" alt="" src="/images/Trophy-Gold-icon72.png" />
                    <div style="position: absolute; left: -20px;" class="normalCaption">Tournaments</div>
                </div>
                <div class="toolbarButton" style="left: 510px;">
                    <img title="Help" alt="" src="/images/help-icon72.png" />
                </div>
                <div class="toolbarButton" style="left: 610px;top:30px;">
                    <div class="fb-login-button" data-max-rows="1" data-size="medium" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="false"></div>
                </div>
                <div style="position: absolute; bottom: 8px; right: 8px; font-size: 10pt; font-family: Consolas;">&copy; 2017 - Stelinno</div>
            </div>            
        </footer>
    </div>

    <!-- Dialogs -->
    <!-- <%String imgSrc = InMaApp.DisplayHelper.GetImgSrc(Model.CategoryTitle);%> -->
    <div id="buySellDialog" style="display:none;">
        <div style="float: left; width: 100px;">
            <img alt="" style="width: 72px; height: 72px;" src="~/images/categories/unknown-icon128.png" />
        </div>
        <div style="float: left; width: 300px; height: 72px;">
            <div class="assetTitle" style="margin-top: 20px; font-weight: bold;">Title</div>
            <div class="assetSymbol">Symbol</div>
        </div>
        <div style="clear: both;"></div>

        <div style="float: left; width: 100px; height: 30px; line-height: 30px;">Buy/Sell</div>
        <div id="buySellRG" style="height: 30px; float: left;">
            <!--<%if (Model.BuySellCode == "SELL")
            { %>
            <input type="radio" id="btnBuySellDlgBuy" name="buySellRG" /><label style="width: 60px;" for="btnBuySellDlgBuy">Buy</label>
            <input type="radio" id="btnBuySellDlgSell" name="buySellRG" checked="checked" /><label style="width: 60px;" for="btnBuySellDlgSell">Sell</label>
            <%}-->
            <!--else
            { %> -->
            <input type="radio" id="btnBuySellDlgBuy" name="buySellRG" checked="checked" /><label style="width: 60px;" for="btnBuySellDlgBuy">Buy</label>
            <input type="radio" id="btnBuySellDlgSell" name="buySellRG" /><label style="width: 60px;" for="btnBuySellDlgSell">Sell</label>
            <!-- <%} %> -->
        </div>
        <div style="clear: both;"></div>

        <div style="margin-top: 10px;">
            <div style="float: left; width: 100px; height: 30px; line-height: 30px;">Now/ToDo</div>
            <div id="nowToDoRG" style="height: 40px; float: left;">
                <!--<%if (Model.InstantBuySell == false)
                { %>
                <input type="radio" id="btnBuySellDlgNow" name="nowToDoRG" /><label style="width: 60px;" for="btnBuySellDlgNow">Now</label>
                <input type="radio" id="btnBuySellDlgToDo" name="nowToDoRG" checked="checked" /><label style="width: 60px;" for="btnBuySellDlgToDo">ToDo</label>
                <%}
                else
                { %>-->
                <input type="radio" id="btnBuySellDlgNow" name="nowToDoRG" checked="checked" /><label style="width: 60px;" for="btnBuySellDlgNow">Now</label>
                <input type="radio" id="btnBuySellDlgToDo" name="nowToDoRG" /><label style="width: 60px;" for="btnBuySellDlgToDo">ToDo</label>
                <!-- <%} %> -->
            </div>
        </div>
        <div style="clear: both;"></div>

        <div style="float: left; width: 100px; height: 30px; line-height: 30px;">Quantity</div>
        <div style="float: left; width: 100px; height: 30px; line-height: 30px;">
            <input id="tbQuantity" type="text" style="width: 60px; text-align: right;" placeholder="10" />
        </div>
        <div style="clear: both;"></div>
        <div style="float: left; width: 100px; height: 30px; line-height: 30px;">Quote</div>
        <div style="float: left; width: 100px; height: 30px; line-height: 30px;">
            <input id="tbQuote" type="text" style="width: 60px; text-align: right;" readonly="readonly" placeholder="44.56" />
        </div>
        <div style="clear: both;"></div>

        <div class="bottomArea">
            <div class="beforeConfirm">
                <div id="btnConfirmBuySell" style="margin-top: 12px; float: left; width: 84px; height: 28px;">Confirm</div>
                <div id="btnCancelBuySell" style="margin-top: 12px; float: left; margin-left: 8px; width: 84px; height: 28px;">Cancel</div>

                <div style="clear: both;"></div>
            </div>
            <div class="afterConfirm">
                <div id="btnOk" style="margin-top: 12px; float: left; width: 84px; height: 28px;">
                    <div style="float: left; margin-left: 0px;">Done</div>
                    <div style="float: left; margin-left: 4px; margin-top: 2px;">
                        <img style="width: 16px; height: 16px;" src="~/images/Actions-dialog-ok-apply-icon32.png" alt="" />
                    </div>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Dialogs -->
</body>
</html>
